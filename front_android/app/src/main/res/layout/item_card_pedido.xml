<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_linha2"
    android:elevation="4dp"
    android:padding="16dp"
    android:layout_marginBottom="24dp">

    <TextView
        android:id="@+id/textStatusPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Recebido"
        android:textColor="@color/azul"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:background="@drawable/shape_status_recebido"
        android:drawableLeft="@drawable/icon_status_recebido"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_produtos_interno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_pedidos_produto"
        tools:itemCount="2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/barra_navegacao"
        android:backgroundTint="@color/cinza4"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTotalItensCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total 0 itens"
            android:textSize="14sp"
            android:textColor="@color/cinza2"/>

        <TextView
            android:id="@+id/textTotalPrecoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 0,00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black2"/>
    </LinearLayout>

</LinearLayout>