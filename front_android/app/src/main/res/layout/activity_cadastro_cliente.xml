<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CadastroClienteActivity">

  <androidx.constraintlayout.widget.ConstraintLayout

      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:layout_editor_absoluteX="151dp"
      tools:layout_editor_absoluteY="361dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/screens_bottom_elements"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="225dp" />

    <EditText
        android:id="@+id/senhaConfirmar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Confirme sua senha"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="387dp" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Crie sua senha"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="333dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Cadastre-se"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur."
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="125dp" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Seu nome"
        android:inputType="text"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="200dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Seu email"
        android:inputType="text"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JÃ¡ possui uma conta?"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="600dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="157dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:text="Fazer login"
        android:textColor="@color/laranja"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="588dp" />

    <Button
        android:id="@+id/criarConta"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/laranja"
        android:text="Criar conta"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="507dp" />

    <ImageView
        android:id="@+id/simbolo_email"
        android:layout_width="25dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/photo_email"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="253dp" />

    <ImageView
        android:id="@+id/simbolo_senha"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/photo_senha"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="307dp" />

    <ImageView
        android:id="@+id/simbolo_senha2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/photo_senha"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="362dp" />

    <ImageView
        android:id="@+id/simbolo_usuario"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/photo_name"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="200dp" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>