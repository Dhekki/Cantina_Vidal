<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/imageProduto"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_cocacola2"
        android:contentDescription="Imagem do Produto"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top"> <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refrigerante Guaraná Tônico Massa"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/black2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garrafa 2L"
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_marginTop="4dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/textPrecoUnitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$3,03"
                android:textSize="14sp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textQuantidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2"
                android:textSize="12sp"
                android:textColor="@color/cinza2"
                android:layout_marginTop="4dp"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>