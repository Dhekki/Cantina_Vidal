<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_perfil_cliente_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="#EEEEEE"
            android:padding="2dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircularImage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/txt_nome_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Usuário..."
                android:textColor="@color/black2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_email_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="emailusuario@gmail.com"
                android:textColor="@color/cinza2"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cinza4"
        android:layout_marginBottom="8dp" />

    <RelativeLayout
        android:id="@+id/btn_mais_opcoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mais opções"
            android:textColor="@color/cinza7"
            android:textStyle="bold"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_seta_mais_opcoes"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_seta"
            app:tint="@color/cinza2" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_opcoes_ocultas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility=""
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sair_conta"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:paddingVertical="18dp"
            android:text="Sair"
            android:textColor="@color/laranja"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:backgroundTint="@color/white"
            app:cornerRadius="12dp"
            app:strokeColor="@color/laranja"
            app:strokeWidth="1dp"
            app:icon="@drawable/icon_sair"
            app:iconTint="@color/laranja"
            app:iconSize="16dp"
            app:iconPadding="4dp"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_excluir_conta"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:paddingVertical="18dp"
            android:text="Excluir conta"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:backgroundTint="@color/laranja"
            app:cornerRadius="12dp"
            app:icon="@drawable/icon_lixeira2"
            app:iconTint="@color/white"
            app:iconSize="16dp"
            app:iconPadding="4dp"
            app:iconGravity="textStart" />
    </LinearLayout>
</LinearLayout>