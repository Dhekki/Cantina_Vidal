<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF9"
    tools:context=".view.PerfilClienteActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        android:src="@drawable/fffcf9" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/txt_titulo_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Perfil"
                    android:textColor="@color/black2"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btn_abrir_edicao"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape_arredondado2"
                    android:backgroundTint="@color/white"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_editar" />

                <ImageView
                    android:id="@+id/btn_fechar_edicao"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape_arredondado2"
                    android:backgroundTint="@color/white"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_x"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_linha2"
                android:elevation="6dp"
                android:orientation="vertical">

                <include android:id="@+id/include_visualizar" layout="@layout/item_perfil_visualizar" />
                <include android:id="@+id/include_editar" layout="@layout/item_perfil_editar" android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/item_perfil_navegacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</FrameLayout>